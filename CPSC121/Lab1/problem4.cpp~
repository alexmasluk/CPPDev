#include <iostream>
#include <cmath>
#include <iomanip>

using namespace std;

int main()
{
	float a=33.185, b=21.234, c=13.80;
	
	cout << "For the following triangle\n";
	cout << "            /\\\n";
	cout << "           /  \\\n";
	cout << "a=" << a 
					  << " /    \\ b=" << b << "\n";
	cout << "         /      \\\n";
	cout << "         --------\n";
	cout << "          c=" << c << "\n";
	
	system("pause");
	return 0;
	            
}

